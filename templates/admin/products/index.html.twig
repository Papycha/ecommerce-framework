{% extends "base.html.twig" %}

{% block title %}Administration des produits
{% endblock %}

{% block body %}
	<h1>Administration des produits</h1>

	<a style="height:50px;width:250px;background-color:#e3c1c1" class="nav-link m-3 p-3 rounded text-center" href="{{ path('admin_produits_add') }}">
		Ajouter un produit
	</a>


	<div
		class="container">
		{#{{dump()}} #}
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-2">

			{% for product in products %}
				<div class="col">
					<div class="card shadow-sm">

						{% for image in product.images %}
							<div>
								<img src="{{ asset('images/products/mini/300x300-' ~ image.name ) }}" alt="Image" width="150">
							</div>
						{% endfor %}


						<div class="card-body">
							<p class="card-text">{{product.title}}
							</p>

							<p class="card-text">
								{{product.author}}
							</p>


							<p class="card-text">
								{{product.genre}}
							</p>


							<p
								class="card-text">
								{# {{item.price}} #}
								EUR</p>

							<div class="d-flex justify-content-between align-items-center">

								<div class="btn-group">
									<button type="button" class="btn btn-sm btn-outline-secondary">
										<a class="" style="text-decoration:none" href=" {{path('admin_produits_edit', {id:product.id})}}  ">Modifier</a>

									</button>
								</div>
								<div class="btn-group">
									<button type="button" class="btn btn-sm btn-outline-secondary">
										<a class="" style="text-decoration:none" href=" {{path('admin_produits_delete', {id:product.id})}}  ">Suprimmer</a>
									</button>
								</div>


								<small class="text-muted">9 mins</small>
							</div>
						</div>
					</div>
				</div>
			{% endfor  %}


		</div>
	</div>


{% endblock %}
