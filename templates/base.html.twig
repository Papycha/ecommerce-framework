<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Marsyclebook

			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>

		{# HEADER #}
		<header>
			<nav class="navbar navbar-expand-lg mb-5" style="background-color: #A37777">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path('about')}}">

						<img src="{{asset('images/logo.png')}}" width="50px" alt="Card image cap">
					</a>


					<div class="collapse navbar-collapse text-white" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{path('about')}}">ACCUEIL
								</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="{{path('index')}}">NOTRE BOUTIQUE</a>


							</li>
						</ul>


						<form class="d-flex" role="search">
							<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
							<button class="btn btn-outline-success" type="submit">Search</button>
						</form>
					</div>
				</div>


				<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
					{% if app.user %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('account') }}">Mon compte</a>

						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Me déconnecter</a>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin') }}">Admin Panel</a>


							</li>
						{% endif %}
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">M'inscrire</a>


						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_login') }}">Me Connecter</a>
						</li>
					{% endif %}


				</ul>

				<a class="navbar-brand" href="{{path('cart')}}">


					<img src="{{asset('images/buy.png')}}" width="50px" alt="Card image cap">
				</a>


			</nav>
		</header>
		{# HEADER END #}


		{# CARTS BLOCK END#}


		{% block body %}


			Marsyclebook

		{% endblock %}


		{% block footer  %}
			<footer class="text-center text-white mt-5" style="background-color: #A37777">
				<div class="container p-4 pb-0">
					<ul class="list-unstyled mb-0">
						<div class="row justify-content-between">
							<div class="col-4">
								<li class="nav-item">
									<a href="{{path('about')}}" class="nav-link px-2  p-2">Accueil</a>

								</li>
							</div>
							<div class="col-4">
								<li class="nav-item">
									<a href="{{path('index')}}" class="nav-link px-2  p-2">Boutique</a>

								</li>
							</div>
						</div>
					</ul>

					<section class="mb-1">
						<a class=" navbar-brand" href="https://www.instagram.com/">
							<img src="{{asset('images/instagram.png')}}" width="50px" alt="Card image cap">
						</a>
						<a class="navbar-brand" href="https://fr-fr.facebook.com/">
							<img src="{{asset('images/facebook.png')}}" width="50px" alt="Card image cap">
						</a>
						<a class="navbar-brand" href="https://www.linkedin.com/">
							<img src="{{asset('images/linkedin.png')}}" width="50px" alt="Card image cap">
						</a>
					</section>
				</div>
				<div class="text-center p-3">
					<a class="text-white" href="{{path('mentionsLegales')}}">@ 	Mentions légales - 2023</a>
				</div>


			</footer>
		</body>
	</html>
</body></html></div>{% endblock %}</body></html>
