{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la catégorie
	{{ category.name }}
{% endblock %}

{% block body %}
	<main class="container">
		<section class="row">
			<div class="col-12">
				<h1>Liste des produits de la catégorie
					{{ category.name }}</h1>
			</div>
			{% for product in category.products %}
				<div class="col">
					<div class="card shadow-sm">

						<div class="card-body">
							{% for image in product.images %}
								<div>
									<img src="{{ asset('images/products/mini/300x300-' ~ image.name ) }}" alt="Image" width="150">
								</div>
							{% endfor %}


							<p class="card-text">
								<h5>{{product.title}}

								</h5>


							</p>

							<p class="card-text">
								{{product.author}}
							</p>


							<p class="card-text">
								{{product.genre}}
							</p>


							<p
								class="card-text">
								{# {{item.price}} #}
								EUR</p>

							<div class="d-flex justify-content-between align-items-center">
								<div class="btn-group">
									<button type="button" class="btn btn-sm btn-outline-secondary">
										<a class="" style="text-decoration:none" href=" {{path('product_details', {id:product.id})}}  ">Voir le produit</a>
									</button>
								</div>
								<small class="text-muted">9 mins</small>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				<h4 class="text-center m-5">Il n'y a actuellement aucun produit de cette catégorie sur notre site web.

				</h4>

			{% endfor %}
		{% endblock %}
