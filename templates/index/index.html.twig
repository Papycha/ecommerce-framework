	{# CAROUSEL #}
	<div id="carouselExample" class="carousel slide mb-5">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="{{asset('images/pb2.jpg')}} " class="d-block w-100" style="height:560px;" alt="...">


			</div>
			<div class="carousel-item">
